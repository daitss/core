%html
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans+Mono",
          :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans:regular,bold",
          :rel => "stylesheet", :type => "text/css"}
    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Serif:regular,bold,italic,bolditalic",
          :rel => "stylesheet", :type => "text/css"}
    %link{:rel => "stylesheet", :href => "/stylesheet.css", :type =>"text/css", :media =>"screen, projection"}
    %script{:type => 'application/javascript', :src => 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js'}
    %script{:type => 'application/javascript', :src => '/local.js'}

    %title
      daitss
      = Daitss::VERSION
  %body
    %nav
      - if @user
        %a{ :href => '/' } dashboard
        = ":"
        %a{ :href => '/packages' } packages
        -if @user.kind_of? Operator
          = ":"
          %a{ :href => '/rejects' } rejects
          = ":"
          %a{ :href => '/snafus' } snafus
          = ":"
          %a{ :href => '/workspace' } workspace
          = ":"
          %a{ :href => '/stashspace' } stashspace
          = ":"
          %a{ :href => '/batches' } batches
          = ":"
          %a{ :href => '/requests' } requests
          = ":"
          %a{ :href => '/log' } log
          = ":"
          %a{ :href => '/admin' } admin

        %span#logo
          = @user.id

      - else
        %a.active{ :href => '#' } login

        %span#logo
          (logo)

    #content
      = yield

    %footer
      %span#daitss-branding
        Florida Digital Archive
        

      %span#daitss-version
        %a{ :href => 'http://github.com/daitss/core' }
          = "DAITSS " + Daitss::VERSION
